---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      .hero {
        text-align: center;
        padding: 4rem 1rem;
        animation: fadeIn 1.2s ease-in;
      }
      .hero h1 {
        font-size: 2.8rem;
        margin-bottom: 1rem;
      }
      .hero p {
        font-size: 1.2rem;
        color: #555;
      }
      .section {
        max-width: 900px;
        margin: 3rem auto;
        padding: 0 1rem;
        animation: slideUp 1s ease-in;
      }
      .services {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
      }
      .card {
        padding: 1.5rem;
        border-radius: 10px;
        background: #f9f9f9;
        box-shadow: 0 6px 15px rgba(0,0,0,0.05);
        transition: transform 0.3s ease;
      }
      .card:hover {
        transform: translateY(-6px);
      }
      @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }
      @keyframes slideUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
      }
    </style>
  </head>

  <body>
    <Header />

    <main>
      <!-- HERO -->
      <section class="hero">
        <h1>SunwayOfficial</h1>
        <p>
          Pharma Technology & Compliance Services<br />
          <strong>MSME Registered | Government of India</strong>
        </p>
      </section>

      <!-- ABOUT -->
      <section class="section">
        <h2>About Us</h2>
        <p>
          SunwayOfficial is a pharma-focused technology and service company providing
          digital, regulatory, and research-based solutions across India.
          Our mission is to modernize pharmaceutical processes using technology,
          compliance expertise, and innovation.
        </p>
        <p>
          <strong>Founder:</strong> Sunil Sahu  
        </p>
      </section>

      <!-- SERVICES -->
      <section class="section">
        <h2>Our Services</h2>
        <div class="services">
          <div class="card">
            <h3>Pharma Compliance Support</h3>
            <p>
              Documentation, SOP guidance, and regulatory support for pharma
              businesses and startups.
            </p>
          </div>

          <div class="card">
            <h3>Technology Solutions</h3>
            <p>
              Digital tools, automation concepts, and AI-based ideas for pharmacy
              and healthcare systems.
            </p>
          </div>

          <div class="card">
            <h3>Research & Innovation</h3>
            <p>
              Support for academic research, startup ideation, and future-ready
              healthcare projects.
            </p>
          </div>
        </div>
      </section>

      <!-- CONTACT -->
      <section class="section">
        <h2>Get in Touch</h2>
        <p>
          üìß Email: info@sunwayofficial.in<br />
          üìç Location: Raipur, Chhattisgarh, India
        </p>
      </section>
    </main>

    <Footer />
  </body>
</html>
